             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             NavigationPage.HasBackButton="False"
             x:Class="Chat_Projekt.Page1"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#0078d7">
    <ContentPage.Content>
        
        <AbsoluteLayout >
            <Editor AbsoluteLayout.LayoutBounds=".85,.03,.641,.07" 
                    AbsoluteLayout.LayoutFlags="All" 
                    x:Name="ipEingabe" 
                    Text="192.168.2.107" />

            <Editor AbsoluteLayout.LayoutBounds=".5,.4,.883,.1" 
                    AbsoluteLayout.LayoutFlags="All" 
                    x:Name="Eingabe" 
