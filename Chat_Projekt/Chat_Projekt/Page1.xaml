            <Button AbsoluteLayout.LayoutBounds=".5,.5,.9,.1" 
                    AbsoluteLayout.LayoutFlags="All" 
                    Text="Bestätigen" 
                    x:Name="bestaetigenButton" 
                    Margin="10" 
